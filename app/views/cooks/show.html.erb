<div class="container text-center">
  <div class="row">
    <div class="col">
      <%= current_user.name %>
      <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.png", size:'100x100' %>


      <h1><%= @cook.cook_name%>の詳細</h1>

      <%= attachment_image_tag @cook, :image, :fill, 300, 300 %>
      <p>料理の名前<%= @cook.cook_name %></p>
      <p>作り方（メモ）<%= @cook.caption%></p>

      <% if @cook.user == current_user %>
        <%= link_to "削除", cook_path(@cook), method: :delete %>
        <%= link_to "編集", edit_cook_path(@cook) %>
      <% end %>
        <%= link_to "戻る", cooks_path %>
    </div>
  </div>
</div>

